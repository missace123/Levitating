<script>
$(document).ready(function() {
    $("a").each(function(){
        theLink = $(this).attr("href");
        if(theLink.startsWith("/") || theLink.startsWith("#") || theLink.startsWith("{BlogURL}")) {
            $(this).attr("target","_self");
        } else {
            $(this).attr("target","_blank"); 
        };
    });
});
</script>

